Base de Données :

create database ExamenPhp;
use ExamenPhp;

create table monstre(
    -> Id int primary key auto_increment,
    -> Nom varchar(100),
    -> Pv int(11),
    -> PA int(11),
    -> PD int(11),
    -> exp_donne int(11))
    -> ENGINE InnoDB;

alter table monstre add PV_initial int(11);

create table personnage(
    -> Id int primary key auto_increment,
    -> Nom varchar(100),
    -> PV int(11),
    -> PA int(11),
    -> PD int(11),
    -> exp_donne int(11),
    -> niveau int(11))
    -> ENGINE InnoDB;

create table salle(
    -> Id int primary key auto_increment,
    -> epreuve varchar(100),
    -> recompense varchar(100))
    -> ENGINE InnoDB;

create table arme(
    -> Id int primary key auto_increment,
    -> Nom varchar(100),
    -> Niveau_requis int(11),
    -> Pv int(11),
    -> Pa int(11),
    -> Pd int(11))
    -> ENGINE InnoDB;


create table marchand(
    -> Id int primary key auto_increment,
    -> Nom varchar(100),
    -> PV int(11),
    -> PA int(11),
    -> PD int(11))
    -> ENGINE InnoDB;

create table inventaire(
    -> Id int primary key auto_increment,
    -> Nom varchar(100),
    -> PV int(11),
    -> PA int(11),
    -> PD int(11))
    -> ENGINE InnoDB;

create table questions (
    -> Id int primary key auto_increment,
    -> Question varchar(100),
    -> Reponse varchar(100))
    -> ENGINE InnoDB;

insert into personnage values (1,"Star",20,5,10,2,1);
insert into personnage values (2,"Gold",40,8,12,6,1);
insert into salle values (1, "enigme","épée");
insert into salle values (2, "combat","pieces");
insert into monstre values (1,"monstre", 20,5,10,6);
insert into monstre values (2,"monstre2", 40,10,20,2);
insert into marchand values (1,"Epee", 0, 2,0);
insert into marchand values (2,"Bouclier", 0, 0,5);
insert into marchand values (3,"Potion de vie", 5, 0,0);
insert into marchand values (4,"Cape d'invisibilite", 0, 0,20);
insert into marchand values (5,"Hache", 0, 8,0);
insert into marchand values (6,"Arc", 0, 4,0);
insert into marchand values (7,"Grimoire", -2, 10,0);
insert into marchand values (8,"Casque", 0, 0,8);

insert into arme values (4,"Cape d'invisibilite",1, 0, 0,20);
insert into arme values (3,"Potion de vie",4, 5, 0,0);
insert into arme values (2,"Bouclier",2, 0, 0,5);
insert into arme values (5,"Hache",1, 0, 8,0);
insert into arme values (6,"Arc",6, 0, 4,0);
insert into arme values (7,"Grimoire",10, -2, 10,0);
insert into arme values (8,"Casque",6, 0, 0,8);
insert into questions values (1, "1 + 1 = ?", "2");
insert into questions values (2, "4 - 1 = ?", "3");
